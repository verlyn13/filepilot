{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://myfiles.dev/schemas/documentation.schema.json",
  "title": "Documentation Validation Schema",
  "description": "Schema for validating project documentation structure and content",
  "type": "object",
  "required": ["title", "version", "lastUpdated", "content", "crossReferences"],
  "properties": {
    "title": {
      "type": "string",
      "minLength": 3,
      "maxLength": 100,
      "description": "Document title"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version (e.g., 1.0.0)"
    },
    "lastUpdated": {
      "type": "string",
      "format": "date",
      "description": "ISO 8601 date of last update"
    },
    "validation": {
      "type": "object",
      "required": ["status", "schema"],
      "properties": {
        "status": {
          "type": "string",
          "enum": ["valid", "invalid", "pending"],
          "description": "Current validation status"
        },
        "schema": {
          "type": "string",
          "description": "Schema file used for validation"
        }
      }
    },
    "agentAware": {
      "type": "boolean",
      "description": "Whether document is configured for AI agent access"
    },
    "content": {
      "type": "object",
      "required": ["sections", "maxDepth"],
      "properties": {
        "sections": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["heading", "level"],
            "properties": {
              "heading": {
                "type": "string",
                "description": "Section heading text"
              },
              "level": {
                "type": "integer",
                "minimum": 1,
                "maximum": 4,
                "description": "Heading level (1-4)"
              },
              "hasExamples": {
                "type": "boolean",
                "description": "Whether section includes examples"
              }
            }
          }
        },
        "maxDepth": {
          "type": "integer",
          "minimum": 1,
          "maximum": 4,
          "description": "Maximum heading depth in document"
        },
        "wordCount": {
          "type": "integer",
          "minimum": 50,
          "description": "Approximate word count"
        }
      }
    },
    "crossReferences": {
      "type": "object",
      "required": ["implements", "references", "validatesAgainst"],
      "properties": {
        "implements": {
          "type": "array",
          "items": {
            "type": "string",
            "description": "Documents this file implements"
          }
        },
        "references": {
          "type": "array",
          "items": {
            "type": "string",
            "description": "Documents this file references"
          }
        },
        "validatesAgainst": {
          "type": "string",
          "description": "Schema file for validation"
        },
        "referencedBy": {
          "type": "array",
          "items": {
            "type": "string",
            "description": "Documents that reference this file"
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "author": {
          "type": "string",
          "description": "Document author"
        },
        "reviewedBy": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Reviewers list"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Document tags for categorization"
        },
        "aiGenerated": {
          "type": "boolean",
          "description": "Whether document was AI-generated"
        },
        "aiReviewed": {
          "type": "boolean",
          "description": "Whether document was AI-reviewed"
        }
      }
    }
  },
  "additionalProperties": false
}